<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.timbres.any? %>
      <h3>timbres (<%= @user.timbres.count %>)</h3>
      <ol class="timbres">
        <%= render partial: 'timbres/timbre', collection: @timbres %>
      </ol>
    <% end %>
  </div>
</div>