<div id="Profile">

  <div class="inner">
  <div class="container">
  <div class="row">
  <div class="col-md-12">
    <section class="user_info">
      <div class="clearfix">
        <div class="avatar"><%= link_to gravatar_for(@user, size: 72), @user %></div>
        <div class="name"><%= link_to @user.name, @user %></div>
      </div>
      <ul class="clearfix">
        <li>
          <div class="status_value"><%= link_to @user.timbres.count, '#' %></div>
          <div class="status_label">音色</div>
        </li>
        <li>
          <div class="status_value"><%= link_to @user.following_users.count, following_path(@user) %></div>
          <div class="status_label">フォロー</div>
        </li>
        <li>
          <div class="status_value"><%= link_to @user.following_users.count, following_path(@user) %></div>
          <div class="status_label">フォロワー</div>
        </li>
      </ul>
      
      <% if logged_in? %>
        <% if current_user == @user %>
          <%= render 'timbres/timbre_form' %>
        <% else %>
          <%= render 'follow_form' %>
        <% end %>
      <% end %>
      
    </section>
  </div>
  </div>
  </div>
  </div>

  <div class="container">
  <div class="row">
  <div class="col-md-12">
    <section class="timbre_list">
      <% if @user.timbres.any? %>
        <ul class="timbres">
          <%= render partial: 'timbres/timbre', collection: @timbres %>
        </ul>
      <% end %>
    </section>
  </div>
  </div>
  </div>

</div>
