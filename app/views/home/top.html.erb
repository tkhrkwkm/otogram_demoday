<% if logged_in? %>
  <div id="Home" class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <div class="clearfix">
          <div class="avatar"><%= link_to gravatar_for(current_user, size: 72), current_user %></div>
          <div class="name"><%= link_to current_user.name, current_user %></div>
        </div>
        <ul class="clearfix">
          <li>
            <div class="status_label">ティンバー</div>
            <div class="status_value"><%= link_to current_user.timbres.count, user_path(current_user) %></div>
          </li>
          <li>
            <div class="status_label">フォロー</div>
            <div class="status_value"><%= link_to current_user.following_users.count, following_path(current_user) %></div>
          </li>
          <li>
            <div class="status_label">フォロワー</div>
            <div class="status_value"><%= link_to current_user.follower_users.count, followers_path(current_user) %></div>
          </li>
        </ul>
      </section>

      <section class="timbre_form">
        <%= render 'timbres/timbre_form' %>
      </section>
    </aside>
  
    <div class="col-md-8">
      <section class="timbre_list">
        <% if current_user.timbres.any? %>
          <ul class="timbres">
            <%= render partial: 'timbres/timbre', collection: @timbres %>
          </ul>
        <% end %>
      </section>
    </div>

  </div>
<% else %>
  <div id="Top" class="row">
    <div class="col-md-12">
      <h1>We're enjoying Otogram!!</h1>
    </div>
  </div>
<% end %>
